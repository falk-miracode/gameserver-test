{
  "name": "@gameserver-test/backend",
  "version": "1.0.0",
  "description": "Colyseus backend server for gameserver-test",
  "main": "dist/index.js",
  "engines": {
    "node": ">= 20.9.0"
  },
  "scripts": {
    "start": "tsx watch src/index.ts",
    "build": "pnpm run clean && tsc",
    "clean": "rimraf dist",
    "dev": "tsx watch src/index.ts",
    "test": "mocha -r tsx test/**_test.ts --exit --timeout 15000",
    "loadtest": "tsx loadtest/example.ts --room my_room --numClients 2"
  },
  "dependencies": {
    "@colyseus/monitor": "^0.16.0",
    "@colyseus/playground": "^0.16.0",
    "@colyseus/schema": "^3.0.60",
    "@colyseus/tools": "^0.16.0",
    "@gameserver-test/schemas": "workspace:*",
    "colyseus": "^0.16.0",
    "colyseus.js": "^0.16.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@colyseus/loadtest": "^0.16.0",
    "@colyseus/testing": "^0.16.0",
    "@types/express": "^4.17.1",
    "@types/mocha": "^10.0.1",
    "mocha": "^10.2.0",
    "rimraf": "^5.0.0",
    "tsx": "^4.10.2",
    "typescript": "^5.0.4"
  }
}
